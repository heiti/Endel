import junit.framework.Test;
import junit.framework.TestSuite;

public class Testid_java {

  public static Test suite() {
    TestSuite suite = new TestSuite();
    suite.addTestSuite(Õnnestunud registreerimine.class);
    suite.addTestSuite(Registreerimisvormi väljade kontroll toimib.class);
    suite.addTestSuite(Õnnestunud sõnumisaatmine.class);
    suite.addTestSuite(Saada sõnum AJAX testimine emaili lahtri peale.class);
    suite.addTestSuite(Autoriseerimine.class);
    suite.addTestSuite(Autentimine.class);
    suite.addTestSuite(Toote ostmine ja tehingu kirje ilmumine minu tehingud alla.class);
    suite.addTestSuite(Toote lisamine ja vastava kirje tekkimine minu toodete alla(path pildile tuleb panna enda arvutis mõnele pildidle suunama).class);
    return suite;
  }

  public static void main(String[] args) {
    junit.textui.TestRunner.run(suite());
  }
}
